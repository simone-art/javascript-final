Escreva a expressão que retorna `positivo` 
// se dois números forem positivos
// e `negativo` se dois números 
// forem negativos.
 
let numP= +
let numN= -
v

function numeroP (a,b) {
    numeroP= +a=+b;
     return numP
}

function numeroN (a,b) {
    numeroP= -a=-b;
     return numN
}

